---
import type { HomePageData } from "../../types/content";

interface Props {
  support: HomePageData["support"];
}

const { support } = Astro.props;
---

<section class="block support">
  <div class="container support-wrap">
    <div>
      <h2 id={support.id}>{support.title}</h2>
      <p>{support.description}</p>
      <div class="support-actions">
        <a class="btn btn-red" href={support.primaryCtaHref}>{support.primaryCtaLabel}</a>
        <a class="btn btn-white" href={support.secondaryCtaHref}>{support.secondaryCtaLabel}</a>
      </div>
    </div>

    <div>
      <div class="goal box-card">
        <div class="goal-head">
          <span>{support.goalLabel}</span>
          <strong>{support.goalPercent}%</strong>
        </div>
        <div class="bar">
          <i style={`width:${support.goalPercent}%`}></i>
        </div>
        <small>{support.goalProgressText}</small>
      </div>

      <form class="newsletter box-card" aria-label="Newsletter" action="#" method="post">
        <label for="newsletter-email">{support.newsletterLabel}</label>
        <div class="field">
          <input id="newsletter-email" type="email" placeholder={support.newsletterPlaceholder} />
          <button class="btn btn-red" type="submit">{support.newsletterButtonLabel}</button>
        </div>
      </form>
    </div>
  </div>
</section>

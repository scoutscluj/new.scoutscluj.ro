---
import type { HomePageData } from "../../types/content";
import SectionHeader from "./SectionHeader.astro";

interface Props {
  impact: HomePageData["impact"];
}

const { impact } = Astro.props;
---

<section class="block impact">
  <div class="container">
    <span class="section-anchor" id="despre" aria-hidden="true"></span>
    <span class="section-anchor" id={impact.id} aria-hidden="true"></span>
    <SectionHeader title={impact.title} description={impact.description} />

    <div class="impact-about">
      <slot />
    </div>

    <div class="impact-grid">
      {
        impact.metrics.map((metric) => (
          <article class="impact-card box-card-border">
            <strong>{metric.value}</strong>
            <span>{metric.label}</span>
            <p>{metric.note}</p>
          </article>
        ))
      }
    </div>

    <div class="pillars">
      {
        impact.pillars.map((pillar) => (
          <article class="pillar box-card">
            <h3>{pillar.title}</h3>
            <p>{pillar.description}</p>
          </article>
        ))
      }
    </div>
  </div>
</section>
